@{
    ViewData["Title"] = "Home Page";
}


<div id="school-app">

    <div class="row mb-3">
        <div class="col text-right">
            <button class="btn btn-primary" v-on:click.prevent="createStudent">New Student</button>
        </div>
    </div>
    <div class="row justify-content-center mb-3" v-if="student">
        
        <div class="col-6">
            <h3 class="text-center">Create New student</h3>
            <hr />
            <div class="form-group row">
                <label class="col-6">First Name: <span class="text-danger">*</span></label>
                <div class="col-6">
                    <input class="form-control" v-model="student.firstName" required />
                </div>
            </div>
            <div class="form-group row">
                <label class="col-6">Last Name: <span class="text-danger">*</span></label>
                <div class="col-6">
                    <input class="form-control" v-model="student.lastName" required />
                </div>
            </div>
            <div class="form-group row">
                <label class="col-6">City: <span class="text-danger">*</span></label>
                <div class="col-6">
                    <input class="form-control" v-model="student.city" required />
                </div>
            </div>
            <div class="form-group row">
                <label class="col-6">Phone Number: <span class="text-danger">*</span></label>
                <div class="col-6">
                    <input class="form-control" v-model="student.phoneNumber" required />
                </div>
            </div>
            <div class="row">
                <div class="text-center col">
                    <button class="btn btn-outline-primary px-4" v-bind:disabled="!canSaveStudent()" v-on:click="saveStudent">Save</button>
                    <button class="btn btn-outline-secondary px-2" v-on:click="cancelStudent()">Cancel</button>
                </div>
            </div>
        </div>
    </div>

    <b-table selectable striped hover ref="studentsTable"
             id="student-records"
             responsive :items="students"
             :fields="fields" :per-page="perPage" :current-page="currentPage">
    </b-table>

    <div class="row">
        <div class="col-12">
            <b-pagination v-model="currentPage"
                          :total-rows="totalRecords"
                          :per-page="perPage"
                          align="right">
            </b-pagination>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/lib/axios/axios.min.js"></script>
    <script src="~/lib/vue/vue.min.js"></script>
    <script src="~/lib/bootstrap-vue/bootstrap-vue.min.js"></script>
    <script src="~/js/school.js"></script>

}