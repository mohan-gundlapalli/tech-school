@model IList<TechSchool.Web.DTO.CityDTO>

@{
    ViewData["Title"] = "Cities";
    int contactCount = 1;
}

@if (Model.Count == 0)
{
    <div class="alert alert-info mb-3">No cities matched the criterion.</div>
}

<h4 class="mb-4">Cities</h4>
<table class="table table-responsive table-hover">
    <tr>
        <th>City</th>
        <th>Count</th>
    </tr>
    @foreach (var c in Model)
    {
        <tr>
            <td>@c.Name</td>
            <td>@c.StudentCount</td>
        </tr>
    }
</table>

<a asp-controller="Home" asp-action="Cities" asp-route-contactCount="@contactCount">Check cities with contact count greater than or equal to @contactCount</a>

